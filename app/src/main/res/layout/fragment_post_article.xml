<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            android:id="@+id/imageView"
            app:layout_constraintWidth_percent=".2"
            app:layout_constraintTop_toTopOf="@+id/ed_content"
            app:layout_constraintBottom_toBottomOf="@+id/ed_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintDimensionRatio="1:1"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/ed_content"
            android:hint="請輸入貼文內容"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:scrollbars="vertical"
            android:maxLength="500"
            android:maxLines="3"
            android:lines="3"
            android:background="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/ed_content"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/ed_content"/>

    <TextView
            android:id="@+id/textView"
            android:text="觀看權限"
            android:textSize="@dimen/text_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            android:layout_marginTop="8dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="@+id/textView">
        <TextView
                android:id="@+id/tv_public"
                android:text="公開"
                android:textSize="@dimen/text_medium"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_blue"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:elevation="4dp"
                android:layout_margin="4dp"/>
        <TextView
                android:id="@+id/tv_friend"
                android:text="朋友"
                android:textSize="@dimen/text_medium"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_black"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:elevation="4dp"
                android:layout_margin="4dp"/>
        <TextView
                android:id="@+id/tv_private"
                android:text="私人"
                android:textSize="@dimen/text_medium"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_black"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:elevation="4dp"
                android:layout_margin="4dp"/>
    </LinearLayout>

    <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="8dp"/>


    <TextView
            android:id="@+id/textView2"
            android:text="標記朋友"
            android:textSize="@dimen/text_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout2"/>
    <TextView
            android:id="@+id/tv_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView5"/>
    <TextView
            android:text="〉"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="@dimen/text_medium"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            app:layout_constraintTop_toBottomOf="@+id/tv_tag" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>